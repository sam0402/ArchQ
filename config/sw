#!/bin/bash
#serv=$(echo $0 | awk -F/ '{print $NF}')
if [ -z $1 ]; then
	echo "Using: sw airplay, airplay2, roon, mpd, airmpd, rompr, lms and other service."
	exit 1
fi
serv=$1
service=$serv
case $1 in
	airplay)
		serv=shairport-sync
		service="shairport-sync"
		;;
	airplay2)
		serv=shairport-sync
		service="shairport-sync nqptp"
		;;
	roon)
		serv=roonserver
		service=roonserver
		;;
	mpd)
		serv=mpd
		service="mpd"
		;;
	airmpd)
		user="--user"
		serv="pipewire"
		service="pipewire pipewire-pulse sinkdef"
		systemctl start --now avahi-daemon.socket
		;;
	rompr)
		serv=mpd
		service="mpd nginx php-fpm avahi-daemon"
		systemctl start --now avahi-daemon.socket
		;;
	lms)
		serv=logitechmediaserver
		service="logitechmediaserver squeezelite"
		;;
esac

if [[ -n $user ]]; then
	[[ $(systemctl is-active --user $serv) == active ]] && systemctl stop --user $service || systemctl start --user $service
else
	[[ $(systemctl is-active $serv) == active ]] && sudo systemctl stop $service || sudo systemctl start $service
fi
echo Service $service is $(systemctl is-active $user $serv).
